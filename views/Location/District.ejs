<!-- Bootstrap modal -->
<div class="modal fade" id="modal_form" role="dialog" >
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title">Huyện Thị xã</h3>
            </div>
            <div class="modal-body form">
                <form action="#" id="form" class="form-horizontal">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">Mã Quận Huyện: <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input name="DistrictID" placeholder="Mã Quận/Huyện" class="form-control" required type="text">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Tên Quận/Huyện: <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input name="DistrictName" placeholder="Tên Quận/Huyện" class="form-control" required type="text">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Tên tiếng Anh: <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input name="EnglishName" placeholder="Tên tiếng Anh" class="form-control" required type="text">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Cấp: <span class="required">*</span></label>
                            <div class="col-md-9">
                                <select class="select2_single form-control" name="Level" id="Level" tabindex="-1">
                                    <option value="Quận">Quận</option>
                                    <option value="Huyện">Huyện</option>   
                                    <option value="Thành phố">Thành phố</option>              
                                    <option value="Thị xã">Thị xã</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Thuộc Tỉnh/Tp *</label>
                            <div class="col-md-9">
                                <select class="select2_single form-control" name="ProvinceID" id="ProvinceList" tabindex="-1"></select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
