<!-- Bootstrap modal -->
<div class="modal fade" id="modal_form" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title">Ngôn ngữ</h3>
            </div>
            <div class="modal-body form">
                <form action="#" id="form" class="form-horizontal">
                    <input type="hidden" value="" name="ControlID" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">Tên Control: <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input name="ControlName" placeholder="Tên Control" class="form-control" required type="text">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Tiếng Việt <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input name="Vn" id="Vn" placeholder="Nhập tên Tiếng Việt" class="form-control" required type="text">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Tiếng Anh: <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input name="Eng" id="Eng" placeholder="Tên tiếng Anh" class="form-control" required type="text">
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Mô tả: <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input name="Description" placeholder="Mô tả của bạn" class="form-control" required type="text">
                                <span class="help-block"></span>
                            </div>
                        </div>                       
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave"   class="btn btn-primary">Save</button>
                <button type="button" id="btnClose"  class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
